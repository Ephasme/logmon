{
  "name": "logmon-ts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix",
    "cover": "jest --coverage",
    "test": "jest",
    "start-dev": "ts-node src/index.ts",
    "build": "tsc",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/index.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "@types/sinon": "^7.0.11",
    "jest": "^24.7.1",
    "moment": "^2.24.0",
    "nyc": "^13.3.0",
    "sinon": "^7.3.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
